<h1><%= @article.title %></h1>
<p><%= @article.body %></p>



<% if @article.status == 'public' || current_user&.admin? || @article.user == current_user %>
  <ul>
    <li>
      <%= link_to "Edit", edit_article_path(@article) %>
    </li>
    <li>
<%= link_to "Delete", delete_article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>
    </li>
  </ul>
<% end %>

<h2>Comments</h2>
<%= render @article.comments %>


<h2>Add a comment</h2>
<%= render 'comments/form' %>

<hr>
<%= link_to "Back Home", articles_path %>
