<div class="comment-form-container">
  <%= form_with model: [@article, @article.comments.build] do |form| %>
    <!-- Comment form content here -->
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.label :status %>
        <!--Display status, was automatically generated and is not part of the mandatory functionality,
        was simply kept because I don't want to risk breaking something.  -->

      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
