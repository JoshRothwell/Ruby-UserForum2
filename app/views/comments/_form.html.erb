<div class="comment-form-container">
  <%= form_with model: [@article, @article.comments.build] do |form| %>
    <!-- Comment form content here -->
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.label :status %>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
